{
  "openapi": "3.0.1",
  "info": {
    "title": "WorkVisaSpotter Plugin",
    "version": "1.0.0"
  },
  "paths": {
    "/api/quick-search": {
      "get": {
        "summary": "Get the list of jobs",
        "operationId": "getJobs",
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "description": "Search keyword",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of Jobs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "items": {
                      "title": { "type": "string" },
                      "description": { "type": "string" },
                      "slug": { "type": "string" },
                      "salary": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
